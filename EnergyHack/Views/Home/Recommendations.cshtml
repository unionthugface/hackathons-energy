
@{
    ViewBag.Title = "Recommendations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Recommendation System</h2>
<p style="text-align:center">What can be better?</p>

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <div style="height: 150px; width:auto; background-color:#1bb2dd"></div>
            <div class="carousel-caption">
                <h3>Clean your HVAC filters.</h3>
            </div>
        </div>
        <div class="item">
            <div style="height: 150px; width:auto; background-color:#50ce9e"></div>
            <div class="carousel-caption">
                <h3>A high-efficiency washer can save you $15/month.</h3>
            </div>
        </div>
        <div class="item">
            <div style="height: 150px; width:auto; background-color:#edc744"></div>
            <div class="carousel-caption">
                <h3>Solar panels for heating can save you $13/month.</h3>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>

